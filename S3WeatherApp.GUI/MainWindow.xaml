<Window x:Class="S3WeatherApp.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S3WeatherApp.GUI"
        xmlns:uc="clr-namespace:S3WeatherApp.GUI.UserControls"
        mc:Ignorable="d"
        Title="Vejret" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Assets\Img\blue_sky.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <uc:SearchCity/>
        <TextBlock Grid.Row="1" Text="20&#176;C" FontSize="150" Foreground="#FF387D84" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
